{
  "version": 2,
  "builds": [
    {
      "src": "server.js",
      "use": "@vercel/node"
    },
    {
      "src": "api-*.js",
      "use": "@vercel/node"
    },
    {
      "src": "public/**/*",
      "use": "@vercel/static"
    },
    {
      "src": "*.html",
      "use": "@vercel/static"
    }
  ],
  "rewrites": [
    { "source": "/api/chat", "destination": "/api-chat.js" },
    { "source": "/api/health", "destination": "/api-health.js" },
    { "source": "/api/:match*", "destination": "/server.js" },

    { "source": "/login.html", "destination": "/login.html" },
    { "source": "/register.html", "destination": "/register.html" },
    { "source": "/dashboard.html", "destination": "/dashboard.html" },
    { "source": "/admin.html", "destination": "/admin.html" },
    { "source": "/verify-deployment.html", "destination": "/verify-deployment.html" },
    { "source": "/test-localhost.html", "destination": "/test-localhost.html" },
    { "source": "/test-api.html", "destination": "/test-api.html" },

    { "source": "/favicon.ico", "destination": "/public/favicon.ico" },
    { "source": "/", "destination": "/index.html" },
    { "source": "/:match*", "destination": "/server.js" }
  ]
}
